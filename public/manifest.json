{
  "manifest_version": 3,
  "name": "extension",
  "version": "1.0.0",
  "description": "my extension",
  "action": {
      "default_popup": "index.html"
  },
  "permissions": [
    "activeTab",
    "storage",
    "tabs"
  ],
  "host_permissions": [
      "https://*/*",
      "http://*/*"
  ],
  "icons": {
    "16": "image.png",
    "48": "image.png",
    "128": "image.png"
  },
  "browser_action": {
    "default_icon": {
      "16": "image.png",
      "48": "image.png",
      "128": "image.png"
    }
  }
}